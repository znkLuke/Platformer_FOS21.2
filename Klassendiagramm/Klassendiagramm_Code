using System;
using System.Collections.Generic;

// Projekt: Plattformer
// Schule: FOS
// Klasse: FOS21
// Lehrer: Herr Töller
// Schüler: Taha Iftikhar

class Program
{
    static void Main(string[] args)
    {
        Game g = new Game();
        g.Start();

        Console.ReadKey(); // Fenster offen halten
    }
}

class Game
{
    Level level1;

    public Game()
    {
        // Es gibt erstmal nur ein Level
        level1 = new Level("Level 1");
    }

    public void Start()
    {
        Console.WriteLine("Spiel startet");
        level1.Start();
    }
}

class Level
{
    string name;
    Player spieler;
    List<Enemy> gegner;
    List<Platform> platformen;

    public Level(string n)
    {
        name = n;
        spieler = new Player(0, 0);

        gegner = new List<Enemy>();
        platformen = new List<Platform>();

        // Gegner und Plattform hinzufügen
        gegner.Add(new Enemy(5, 0));
        platformen.Add(new Platform(0, -1, 10));
    }

    public void Start()
    {
        Console.WriteLine("Starte " + name);

        spieler.Rechts();
        spieler.Springen();

        foreach (Enemy g in gegner)
        {
            g.Bewegen();
        }
    }
}

class Player
{
    int x;
    int y;
    int leben = 3; // aktuell noch ohne Funktion

    public Player(int startX, int startY)
    {
        x = startX;
        y = startY;
    }

    public void Rechts()
    {
        x = x + 1;
        Console.WriteLine("Spieler geht nach rechts. X = " + x);
    }

    public void Springen()
    {
        y = y + 1;
        Console.WriteLine("Spieler springt. Y = " + y);
    }
}

class Enemy
{
    int x;
    int y;

    public Enemy(int startX, int startY)
    {
        x = startX;
        y = startY;
    }

    public void Bewegen()
    {
        x = x - 1;
        Console.WriteLine("Gegner bewegt sich. X = " + x);
    }
}

class Platform
{
    int x;
    int y;
    int breite;

    public Platform(int px, int py, int b)
    {
        x = px;
        y = py;
        breite = b;
    }
}
